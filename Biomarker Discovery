# Assuming dfCardio is defined elsewhere in your code
# dfCardio <- read.csv("path_to_your_data.csv")  # Your actual data frame should be assigned here

# Perform Differential Expression Analysis (DEA)
perform_dea <- function(data) {
  features <- data %>% select(age, height, weight, ap_hi, ap_lo, gluc)  # Excluded cholesterol
  dea_results <- lapply(features, function(feature) {
    t_test_result <- t.test(feature ~ data$cardio)
    mean_group_1 <- mean(feature[data$cardio == 1])
    mean_group_0 <- mean(feature[data$cardio == 0])
    sd_group_1 <- sd(feature[data$cardio == 1])
    sd_group_0 <- sd(feature[data$cardio == 0])
    data.frame(
      Feature = deparse(substitute(feature)),
      p_value = t_test_result$p.value,
      logFC = mean_group_1 - mean_group_0,
      adj_p_value = p.adjust(t_test_result$p.value, method = "BH"),
      mean_group_1 = round(mean_group_1, 2),
      mean_group_0 = round(mean_group_0, 2),
      sd_group_1 = round(sd_group_1, 2),
      sd_group_0 = round(sd_group_0, 2)
    )
  })
  do.call(rbind, dea_results)
}

# Identify biomarkers function using logistic regression
identify_biomarkers <- function(data) {
  features <- data %>% select(-cardio)  # Exclude target variable
  results <- sapply(features, function(feature) {
    model <- glm(data$cardio ~ feature, family = binomial)
    p_value <- summary(model)$coefficients[2, 4]  # p-value for the feature
    return(p_value)
  })
  
  biomarker_results <- data.frame(Feature = names(results), P_Value = results)
  biomarker_results$Significant <- biomarker_results$P_Value < 0.05  # Adjust significance level
  
  # Organize and format biomarker results table for clarity
  biomarker_results <- biomarker_results %>%
    arrange(P_Value) %>%
    mutate(P_Value = format(round(P_Value, 4), nsmall = 4), 
           Significant = ifelse(Significant, "Yes", "No"))
  
  # Clean up and rename columns for better clarity
  colnames(biomarker_results) <- c("Feature", "P-Value", "Significant")
  
  biomarker_results
}

# Helper function for generating forest plot data
generate_forest_plot_data <- function(model) {
  coef_summary <- summary(model)$coefficients
  forest_data <- data.frame(
    Variable = rownames(coef_summary),
    Estimate = coef_summary[, "Estimate"],
    Lower_CI = coef_summary[, "Estimate"] - 1.96 * coef_summary[, "Std. Error"],
    Upper_CI = coef_summary[, "Estimate"] + 1.96 * coef_summary[, "Std. Error"],
    P_Value = coef_summary[, "Pr(>|z|)"]
  )
  forest_data <- forest_data %>%
    filter(Variable != "(Intercept)")  # Remove intercept
  forest_data
}

# Create a function to get cholesterol levels categorized.
get_cholesterol_levels <- function(data) {
  cholesterol_counts <- table(data$cholesterol)
  data.frame(Level = names(cholesterol_counts), Count = as.vector(cholesterol_counts))
}

# Function to create a Manhattan plot
create_manhattan_plot <- function(data, feature) {
  results <- identify_biomarkers(data)
  results <- results %>% filter(Feature == feature)
  
  ggplot(results, aes(x = Feature, y = -log10(P_Value), label = Feature)) +
    geom_bar(stat = "identity", fill = "blue") +
    geom_hline(yintercept = -log10(0.05), linetype = "dashed", color = "red") +
    labs(title = paste("Manhattan Plot for", feature),
         x = "Features",
         y = "-log10(P-Value)") +
    theme_minimal()
}

